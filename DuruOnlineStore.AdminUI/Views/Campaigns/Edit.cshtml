@model DuruOnlineStore.Data.Entities.Campaign

@{
    ViewData["Title"] = "Kampanya Düzenle";
}

<form id="editCampaignForm" method="post" asp-action="Edit" class="border mt-4 bg-white">
    <div class="row p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 border-bottom pt-2">
            <h2>Kampanya Düzenle</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8 mb-3">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br /> <br />
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8 mb-3">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <div class="col-4">
                        <span>@Html.DisplayNameFor(model => model.IsActive)</span>
                    </div>
                    <div class="col-4">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" style="margin-left: 5px;" />
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    <label asp-for="DiscountRate" class="control-label"></label>
                </div>
                <div class="col-8 mb-3">
                    <input asp-for="DiscountRate" class="form-control" />
                    <span asp-validation-for="DiscountRate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Kaydet</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Geri Dön</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/campaign.js"></script>

}
