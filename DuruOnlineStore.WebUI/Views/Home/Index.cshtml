@model ProductItemViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="~/css/nouislider.min.css" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link type="text/css" rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- shop -->
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img">
                            <img src="./images/makyaj.png" alt="">
                        </div>
                        <div class="shop-body">
                            <h3>Makyaj<br>Ürünleri</h3>
                            <a href="/Products/Index?categoryId=1" class="cta-btn">ALIŞVERİŞE BAŞLA <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
                <!-- /shop -->
                <!-- shop -->
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img">
                            <img src="./images/perfume.png" alt="">
                        </div>
                        <div class="shop-body">
                            <h3>Parfüm &<br>Deodorant</h3>
                            <a href="/Products/Index?categoryId=6" class="cta-btn">ALIŞVERİŞE BAŞLA <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
                <!-- /shop -->
                <!-- shop -->
                <div class="col-md-4 col-xs-6">
                    <div class="shop">
                        <div class="shop-img">
                            <img src="images/kisiselbakim.png" alt="">
                        </div>
                        <div class="shop-body">
                            <h3>Kişisel Bakım<br>Ürünleri</h3>
                            <a href="/Products/Index?categoryId=4" class="cta-btn">ALIŞVERİŞE BAŞLA <i class="fa fa-arrow-circle-right"></i></a>
                        </div>
                    </div>
                </div>
                <!-- /shop -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">YENİ ÜRÜNLER</h3>
                        <div class="section-nav">
                            <ul class="section-tab-nav tab-nav">
                                <li class="active"><a data-toggle="tab" href="#tab1">En Son Gelenler</a></li>
                                @*  <li><a data-toggle="tab" href="#tab1">Kampanyalı Ürünler</a></li> *@
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /section title -->
                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            <div id="tab1" class="tab-pane active">
                                <div class="products-slick" data-nav="#slick-nav-1">
                                    <!-- product -->
                                    @foreach (var latestProduct in ViewBag.LatestProducts)
                                    {
                                        <div class="col-md-3 col-xs-6">
                                            <partial name="_ProductItem" model="latestProduct" />
                                            <div class="clearfix visible-sm visible-xs"></div>
                                        </div>
                                    }
                                    <!-- /product -->
                                </div>
                                <div id="slick-nav-1" class="products-slick-nav"></div>
                            </div>
                            <!-- /tab -->
                        </div>
                    </div>
                </div>
                <!-- Products tab & slick -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">KAMPANYALI ÜRÜNLER</h3>
                        <div class="section-nav">
                            <ul class="section-tab-nav tab-nav">
                                <li class="active"><a data-toggle="tab" href="#tab2">Flaş Ürünler</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /section title -->
                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            <div id="tab2" class="tab-pane fade in active">
                                <div class="products-slick" data-nav="#slick-nav-2">
                                    <!-- product -->
                                    @foreach (var discountedProducts in ViewBag.DiscountedProducts)
                                    {
                                        <div class="col-md-3 col-xs-6">
                                            <partial name="_ProductItem" model="discountedProducts" />
                                            <div class="clearfix visible-sm visible-xs"></div>
                                        </div>
                                    }
                                    <!-- /product -->
                                </div>
                                <div id="slick-nav-2" class="products-slick-nav"></div>
                            </div>
                            <!-- /tab -->
                        </div>
                    </div>
                </div>
                <!-- /Products tab & slick -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
    <!-- NEWSLETTER -->
    <div id="newsletter" class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="newsletter">
                        <p><strong>Kampanyalardan Haberdar Olun!</strong></p>
                        <form>
                            <input class="input" type="email" placeholder="E-posta adresinizi yazın...">
                            <button class="newsletter-btn"><i class="fa fa-envelope"></i> Abone Ol</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /NEWSLETTER -->
    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-6 col-xs-6">
                    <div class="section-title">
                        <h4 class="title">ÇOK SATANLAR</h4>
                        <div class="section-nav">
                            <div id="slick-nav-3" class="products-slick-nav"></div>
                        </div>
                    </div>

                    <div class="products-widget-slick" data-nav="#slick-nav-3">
                        <div>
                            <!-- product widget -->
                            @foreach (var randomProduct in ViewBag.RandomProducts1)
                            {
                                <div class="product-widget">
                                    <div class="product-img">
                                        <img src="@randomProduct.ImageUrl" alt="">
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@randomProduct.Category</p>
                                        <h3 class="product-name">
                                            <a href="@Url.Action("Details", "Products", new { id = randomProduct.Id })">
                                                @randomProduct.Name
                                            </a>
                                        </h3>
                                        <h4 class="product-price">@randomProduct.Price TL</h4>
                                    </div>
                                </div>
                            }
                        </div>

                        <div>
                            <!-- product widget -->
                            @foreach (var randomProduct in ViewBag.RandomProducts2)
                            {
                                <div class="product-widget">
                                    <div class="product-img">
                                        <img src="@randomProduct.ImageUrl" alt="">
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">@randomProduct.Category</p>
                                        <h3 class="product-name">
                                            <a href="@Url.Action("Details", "Products", new { id = randomProduct.Id })">
                                                @randomProduct.Name
                                            </a>
                                        </h3>
                                        <h4 class="product-price">@randomProduct.Price TL</h4>
                                    </div>
                                </div>
                            }
                            <!-- product widget -->
                        </div>
                    </div>
                </div>

                <!-- BEGIN PROMO -->
                <div class="col-md-6 shop-index-carousel">
                    <div class="content-slider">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="./images/perfume.png" class="img-responsive" alt="">
                                </div>
                                <div class="item">
                                    <img src="./images/perfume.png" class="img-responsive" alt="">
                                </div>
                                <div class="item">
                                    <img src="images/kisiselbakim.png" class="img-responsive" alt="">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PROMO -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->
</body>

